#!/bin/bash

# Simple test version
echo "Forge Features CLI - Test Version"

case "${1:-}" in
    "help")
        echo "Help: forge-features <command>"
        ;;
    "list")
        echo "Available features:"
        echo "- global.debug-mode"
        echo "- global.beta-features"
        echo "- mcp-gateway.rate-limiting"
        ;;
    *)
        echo "Unknown command. Use 'help' for usage."
        ;;
esac
