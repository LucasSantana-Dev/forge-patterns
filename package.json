{
  "name": "@uiforge/forge-patterns",
  "version": "1.0.0",
  "description": "Shared configuration, workflows, and architectural patterns for the UIForge ecosystem",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "patterns/",
    "scripts/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint:check && npm run format:check && npm run test",
    "test": "bash patterns/cost/scripts/validate-development-workflow.sh",
    "test:plugins": "node test/plugin-system-validation.js",
    "test:feature-toggles": "node test/feature-toggle-validation.js",
    "test:integration": "node test/cross-project-integration.js",
    "test:all": "npm run test && npm run test:plugins && npm run test:feature-toggles",
    "prepare": "npm run build && husky install",
    "pre-commit": "npm run lint && npm run format && npm run test && .husky/pre-commit-backup-check",
    "prepack": "npm run build",
    "publish": "npm publish --access public",
    "integrate": "node scripts/integrate.js",
    "integrate:mcp-gateway": "node scripts/integrate.js --project=mcp-gateway",
    "integrate:uiforge-mcp": "node scripts/integrate.js --project=uiforge-mcp",
    "integrate:uiforge-webapp": "node scripts/integrate.js --project=uiforge-webapp",
    "patterns": "node scripts/forge-patterns-cli.js",
    "patterns:list": "node scripts/forge-patterns-cli.js list",
    "patterns:search": "node scripts/forge-patterns-cli.js search",
    "patterns:validate": "node scripts/forge-patterns-cli.js validate"
  },
  "bin": {
    "forge-patterns": "dist/cli.js"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^25.2.3",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "keywords": [
    "patterns",
    "architecture",
    "mcp",
    "uiforge",
    "development",
    "workflow",
    "typescript",
    "eslint",
    "prettier"
  ],
  "author": "UIForge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LucasSantana-Dev/uiforge-patterns.git"
  },
  "bugs": {
    "url": "https://github.com/LucasSantana-Dev/uiforge-patterns/issues"
  },
  "homepage": "https://github.com/LucasSantana-Dev/uiforge-patterns#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
