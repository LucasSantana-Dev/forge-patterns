" Disable backup files
set nobackup
set nowritebackup
set noswapfile

" Other useful settings
set hidden
set number
set relativenumber
set expandtab
set tabstop=2
set shiftwidth=2
set smarttab
set softtabstop=2
set autoindent
set copyindent
set smartindent
set backspace=indent,eol,start
set showcmd
set showmode
set showmatch
set ignorecase
set smartcase
set incsearch
set hlsearch
set wrap
set scrolloff=5
set sidescrolloff=5
set wildmenu
set wildmode=list:longest
set ttyfast
set visualbell
set ruler
set laststatus=2
